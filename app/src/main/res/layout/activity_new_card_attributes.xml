<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/RootLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout">

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollStyle">

        <LinearLayout
            style="@style/ScrollLinearVertical">


            <LinearLayout
                style="@style/HorizontalRow">

                <!-- Blok WW -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/WWView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_ww" />
                    <EditText
                        android:id="@+id/inputWW"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok US -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/USView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_us" />
                    <EditText
                        android:id="@+id/inputUS"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok K -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/KView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_k" />
                    <EditText
                        android:id="@+id/inputK"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok Odp -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/OdpView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_odp" />
                    <EditText
                        android:id="@+id/inputOdp"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

            </LinearLayout>

            <!-- Kolejny blok (Zr, Int, SW, Ogd) -->
            <LinearLayout
                style="@style/HorizontalRow">

                <!-- Blok Zr -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/ZrView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_zr" />
                    <EditText
                        android:id="@+id/inputZr"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok Int -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/IntView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_int" />
                    <EditText
                        android:id="@+id/inputInt"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok SW -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/SWView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_sw" />
                    <EditText
                        android:id="@+id/inputSW"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok Ogd -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/OgdView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_ogd" />
                    <EditText
                        android:id="@+id/inputOgd"
                        style="@style/NumberInputStyle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/HorizontalRow">

                <!-- Blok A -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/AView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_a" />
                    <EditText
                        android:id="@+id/inputA"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok Zyw -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/ZywView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_zyw" />
                    <EditText
                        android:id="@+id/inputZyw"
                        style="@style/NumberInputStyle"/>
                </LinearLayout>

                <!-- Blok S -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/SView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_s" />
                    <EditText
                        android:id="@+id/inputS"
                        style="@style/ReadOnlyInputStyle"/>
                </LinearLayout>

                <!-- Blok Wt -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/WtView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_wt" />
                    <EditText
                        android:id="@+id/inputWt"
                        style="@style/ReadOnlyInputStyle" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/HorizontalRow"
                android:layout_marginBottom="16dp">

                <!-- Blok Sz -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/SzView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_sz" />
                    <EditText
                        android:id="@+id/inputSz"
                        style="@style/NumberInputStyle"/>
                </LinearLayout>

                <!-- Blok Mag -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/MagView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_mag" />
                    <EditText
                        android:id="@+id/inputMag"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok PO -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/POView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_po" />
                    <EditText
                        android:id="@+id/inputPO"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

                <!-- Blok PP -->
                <LinearLayout style="@style/InputBlockStyle">
                    <TextView
                        android:id="@+id/PPView"
                        style="@style/DoubleLabelStyle"
                        android:text="@string/label_pp" />
                    <EditText
                        android:id="@+id/inputPP"
                        style="@style/NumberInputStyle" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/rollButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dice_button" />
            <LinearLayout
                style="@style/HorizontalRow">
                <TextView
                    android:id="@+id/rollHintTextView"
                    style="@style/SingleLabelStyle"
                    android:gravity="center"
                    android:text="Wylosuj!"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                style="@style/HorizontalRow"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ShallyiView"
                        style="@style/DoubleLabelStyle"
                        android:text="Łaska: " />
                    <TextView
                        android:id="@+id/Shallyi2View"
                        style="@style/DoubleLabelStyle"
                        android:text="Shallyi: " />
                </LinearLayout>

                <TextView
                    android:id="@+id/LaskaTextView"
                    style="@style/ClickableDropdownTextView"
                    android:hint="Wybierz cechę" />
            </LinearLayout>

            <LinearLayout
                style="@style/HorizontalRow">
                <TextView
                    android:id="@+id/abilitiesTextView"
                    style="@style/DoubleLabelStyle"
                    android:layout_width="match_parent"
                    android:text="Umiejętności rasowe: "/>
            </LinearLayout>

            <LinearLayout
                style="@style/HorizontalRow"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/skillsTextView"
                    style="@style/DoubleLabelStyle"
                    android:layout_width="match_parent"
                    android:text="Zdolności rasowe: "/>
            </LinearLayout>
            <LinearLayout
                style="@style/HorizontalRow">
                <TextView
                    android:id="@+id/skillsAbilityHintTextView"
                    style="@style/DoubleLabelStyle"
                    android:layout_width="match_parent"
                    android:text="Wybierz dodatkowe umiejętności/zdolności:"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ability1View"
                style="@style/HorizontalRow">

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />

                <TextView
                    android:id="@+id/ability1TextView"
                    style="@style/ClickableDropdownTextView"
                    android:layout_weight="6"
                    android:hint="Wybierz umiejętność"/>

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ability2View"
                style="@style/HorizontalRow">

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />

                <TextView
                    android:id="@+id/ability2TextView"
                    style="@style/ClickableDropdownTextView"
                    android:layout_weight="6"
                    android:hint="Wybierz umiejętność"/>

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/skill1View"
                style="@style/HorizontalRow">

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />

                <TextView
                    android:id="@+id/skill1TextView"
                    style="@style/ClickableDropdownTextView"
                    android:layout_weight="6"
                    android:hint="Wybierz zdolność"/>

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/skill2View"
                style="@style/HorizontalRow">

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />

                <TextView
                    android:id="@+id/skill2TextView"
                    style="@style/ClickableDropdownTextView"
                    android:layout_weight="6"
                    android:hint="Wybierz zdolność"/>

                <TextView
                    style="@style/SingleLabelStyle"
                    android:text="" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_001"
            android:scaleType="fitCenter"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:adjustViewBounds="true"
            android:background="@null"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/exit_002"
            android:scaleType="fitCenter"

            android:adjustViewBounds="true"
            android:background="@null"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/next_001"
            android:scaleType="fitCenter"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:adjustViewBounds="true"
            android:background="@null" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
