<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_0003"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:gravity="center_horizontal">

        <!-- IMIE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameView"
                style="@style/LabelStyle"
                android:text="Imie: " />
            <EditText
                android:id="@+id/inputName"
                style="@style/SmallInputStyle"
                android:background="@drawable/translucent_bg"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- RASA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/raceView"
                style="@style/LabelStyle"
                android:text="Rasa: " />
            <EditText
                android:id="@+id/inputRace"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- WIEK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ageView"
                style="@style/LabelStyle"
                android:text="Wiek: " />
            <EditText
                android:id="@+id/inputAge"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- PŁEĆ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sexView"
                style="@style/LabelStyle"
                android:text="Płeć: " />
            <EditText
                android:id="@+id/inputSex"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- OCZY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/eyesView"
                style="@style/LabelStyle"
                android:text="Oczy: " />
            <EditText
                android:id="@+id/inputEyes"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- WŁOSY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hairView"
                style="@style/LabelStyle"
                android:text="Włosy: " />
            <EditText
                android:id="@+id/inputHair"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

            <!-- WZROST -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/growthView"
                style="@style/LabelStyle"
                android:text="Wzrost: " />
            <EditText
                android:id="@+id/inputGrowth"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- WAGA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/weightView"
                style="@style/LabelStyle"
                android:text="Waga: " />
            <EditText
                android:id="@+id/inputWeight"
                style="@style/SmallInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- MIEJSCE URODZENIA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/placeOfBirthView"
                style="@style/LabelStyle"
                android:text="Miejsce \nurodzenia: " />
            <EditText
                android:id="@+id/inputPlaceOfBirth"
                style="@style/MediumInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>

        <!-- ZNAK GWIEZDNY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/starSignView"
                style="@style/LabelStyle"
                android:text="Znak \nGwiezdny: " />
            <EditText
                android:id="@+id/inputStarSign"
                style="@style/MediumInputStyle"
                android:layout_width="251dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ZNAKI SZCZEGÓLNE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/specialSignsView"
                style="@style/LabelStyle"
                android:text="Znaki Szczególne: " />
            <EditText
                android:id="@+id/inputSpecialSigns"
                style="@style/LargeInputStyle"
                android:layout_width="251dp"
                />
        </LinearLayout>

        <!-- RODZINA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/familyView"
                style="@style/LabelStyle"
                android:text="Rodzina: " />
            <EditText
                android:id="@+id/inputFamily"
                style="@style/LargeInputStyle"
                android:layout_width="251dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <!-- Przycisk z grafiką -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exit_001" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Drugi przycisk z grafiką -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_001" />

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
