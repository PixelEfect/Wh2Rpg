<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp">

    <EditText
        android:id="@+id/dynamicInput"
        style="@style/ReadOnlyInputStyle"
        android:layout_width="37dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <com.dd.rpgcardapp.VerticalProgressView
        android:id="@+id/dynamicProgress"
        style="@style/StatProgressStyle"
        android:layout_width="8dp"
        android:layout_height="30dp" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/dynamicName"
        style="@style/CharSkillTextStyle"
        android:text="Umiejętność dynamiczna" />
</LinearLayout>
