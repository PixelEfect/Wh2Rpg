<resources>
    <style name="Theme.Wh2Rpg" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <!-- Główny pojemnik -->
    <style name="RootLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_0004</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- Scroll -->
    <style name="ScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fillViewport">true</item>
    </style>
    <!-- Główny pojemnik w scrollu -->
    <style name="ScrollLinearVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">32dp</item>
    </style>
    <!-- Rozwijane opcje -->
    <style name="ClickableDropdownTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!-- Kontener na dane poziomo -->
    <style name="HorizontalRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <!-- Kontener na dane pionowo -->
    <style name="VerticalRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Kontener na nazwe statystyki i okienko z wartoscia -->
    <style name="InputBlockStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>
</resources>